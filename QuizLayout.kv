            pos_hint: {'center_x':.93, 'center_y': .10}
            font_size: '18sp'
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1  # White text color
            md_bg_color: 1, 0, 0, 1  # Red background color
            elevation_normal: 10  
            line_color: 0, 0, 0, 1
